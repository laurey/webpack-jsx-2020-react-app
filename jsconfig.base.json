{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "lib": [
      "DOM",
      "ES2015",
      "ES2016",
      "ES2017",
      "ES2018",
      "ES2019",
      "ES2020"
    ],
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "checkJs": true,
    "module": "ES2015",
    "skipLibCheck": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "strictNullChecks": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "suppressImplicitAnyIndexErrors": true,
    "forceConsistentCasingInFileNames": true
  }
}