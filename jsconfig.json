{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
    },
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "checkJs": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "build",
    "dist",
    "output",
    "coverage",
    "node_modules",
    "*.__test__.js",
    "*.test.js",
    "*.spec.js"
  ]
}